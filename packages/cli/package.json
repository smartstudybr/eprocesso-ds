{
  "name": "eprocesso-ds",
  "version": "1.0.0",
  "description": "Design System CLI para componentes React + Tailwind",
  "main": "dist/index.js",
  "bin": {
    "eprocesso-ds": "dist/index.js",
    "epds": "dist/index.js"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:cli": "npm run build -w packages/cli",
    "dev": "npm run dev -w packages/cli",
    "publish:cli": "npm run build:cli && npm publish -w packages/cli",
    "sync:registry": "node scripts/sync-registry.js"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4",
    "cosmiconfig": "^8.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  }
}